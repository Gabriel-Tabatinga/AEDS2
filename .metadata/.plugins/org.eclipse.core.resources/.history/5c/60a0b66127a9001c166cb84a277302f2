
public class Aplicacao {

	public static int contarMaisculas(String entrada) {
		int cont = 0;
		for (int i = 0; i < entrada.length(); i++) {
			if ((entrada.charAt(i) >= 'A') && (entrada.charAt(i) <= 'Z')) {
				cont++;
			}
		}
		return cont;
	}

	public static void main(String[] args) {
		String entrada;
		int cont;
		System.out.println("Digite a string que sera analisada.");
		entrada = MyIO.readLine();
		cont = contarMaisculas(entrada);
		System.out.println("Numero de caracteres maisculos de " + entrada + ": " + cont);
	}

}
